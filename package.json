{
	"name": "@natlibfi/passport-melinda-jwt",
	"description": "Passport authentication strategy for Melinda using JWT tokens",
	"author": {
		"name": "The National Library of Finland"
	},
	"keywords": [],
	"homepage": "https://github.com/NatLibFi/passport-melinda-jwt-js",
	"bugs": {
		"url": "https://github.com/NatLibFi/passport-melinda-jwt-js/issues"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:natlibfi/passport-melinda-jwt-js.git"
	},
	"license": "MIT+",
	"version": "2.0.0",
	"main": "./dist/index.js",
	"engines": {
		"node": ">=18"
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"prepare": "npm run build",
		"build": "babel ./src --source-maps --copy-files --delete-dir-on-start --out-dir=dist",
		"lint": "eslint ./src",
		"lint:dev": "eslint --fix ./src",
		"test": "npm run lint",
		"test:dev": "npm run lint:dev"
	},
	"dependencies": {
		"jsonwebtoken": "^9.0.2",
		"passport": "^0.7.0",
		"passport-jwt": "^4.0.1"
	},
	"devDependencies": {
		"@babel/cli": "^7.24.8",
		"@babel/core": "^7.25.2",
		"@babel/node": "^7.25.0",
		"@babel/preset-env": "^7.25.3",
		"@babel/register": "^7.24.6",
		"@natlibfi/eslint-config-melinda-backend": "^3.0.5",
		"eslint": "^8.57.0"
	},
	"eslintConfig": {
		"extends": "@natlibfi/melinda-backend"
	},
	"babel": {
		"presets": [
			[
				"@babel/preset-env",
				{
					"targets": "maintained node versions"
				}
			]
		]
	}
